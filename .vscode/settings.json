{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
  },
  // 最大文字数などのオプション引数を指定する場合
  "black-formatter.args": [
    "--line-length=120"
  ],
  "isort.args": [
    "--profile",
    "black"
  ],
  "flake8.args": [
    "--max-line-length=120",
    "--max-complexity=10",
  ],
}